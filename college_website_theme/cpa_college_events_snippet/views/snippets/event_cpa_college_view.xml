    <template id="dynamic_filter_template_blog_post_cpa_college" name="CPA College blogs">
        <div t-foreach="records" t-as="data" class=" w-100 s_blog_posts_post">
            <t t-set="record" t-value="data['_record']"/>
            <div class="s_blog_posts_post_cover_cpa_college">
                <t t-call="cpa_college_events_snippet.new_record_cover_cpa_college">
                    <t t-set="_record" t-value="record"/>
                    <t t-set="use_filters" t-value="True"/>
                    <t t-set="additionnal_classes" t-value="' '"/>
                </t>
            </div>
        </div>
    </template>
</odoo>
