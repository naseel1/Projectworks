<odoo>
    <record id="view_notice_board_form" model="ir.ui.view">
        <field name="name">notice.board.form</field>
        <field name="model">notice.board</field>
        <field name="arch" type="xml">
            <form string="Notice Board">
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="pdf_file" filename="file_name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_notice_board_tree" model="ir.ui.view">
        <field name="name">notice.board.tree</field>
        <field name="model">notice.board</field>
        <field name="arch" type="xml">
            <tree string="Notice Board">
                <field name="title"/>
                <field name="file_name"/>
            </tree>
        </field>
    </record>

    <record id="action_notice_board" model="ir.actions.act_window">
        <field name="name">Notice Board</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">notice.board</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_notice_board_tree"/>
    </record>
    <menuitem id="menu_notice_board"
              name="Notice Board"
              parent="menu_examinations_root"
              action="action_notice_board"
              sequence="10"
              groups="examinations.group_examinations_manage_admin"/>

</odoo>