<odoo>
    <data>
        <record id="programmes_details" model="ir.ui.view">
            <field name="name">programmes_details</field>
            <field name="type">qweb</field>
            <field name="key">mes_college.programmes_details</field>
            <field name="arch" type="xml">
                <t name="About" t-name="mes_college.programmes_details_menu">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_structure">
                            <section class=" bg_color">
                                <div class="container" id="container_width">
                                    <t if="data">
                                        <section class="mb32">
                                            <h2 class="main-head"
                                                style="text-align:left;padding-top:40px;padding-bottom:40px;">
                                                <t t-esc="data['programme_name']"/>
                                            </h2>
                                        </section>
                                    </t>
                                </div>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
        <record id="programmes_details_page" model="website.page">
            <field name="url">/programmes_details</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="programmes_details"/>
            <field name="track">True</field>
        </record>
    </data>
</odoo>
