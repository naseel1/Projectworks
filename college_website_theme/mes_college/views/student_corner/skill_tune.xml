<odoo>
    <data>
        <record id="skill_tune" model="ir.ui.view">
            <field name="name">skill_tune</field>
            <field name="type">qweb</field>
            <field name="key">mes_college.skill_tune</field>
            <field name="arch" type="xml">
                <t name="english" t-name="mes_college.skill_tune_menu">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_structure">
                            <section class="bg_color">
                                <div class="container" id="container_width">
                                    <div class="row">
                                        <div class=" pt32 pb32 col-md-12">
                                            <div>
