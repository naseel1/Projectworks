<odoo>
    <data>
        <record id="programme_detail" model="ir.ui.view">
            <field name="name">Event Activities</field>
            <field name="type">qweb</field>
            <field name="key">mes_college.programme_detail</field>
            <field name="arch" type="xml">
                <t name="v" t-name="mes_college.programme_detail_menu">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_structure">
                            <section class="page o_colored_level" style="padding: 0px; background-image: none;">
                                <div class="bg_color_club" data-original-title="" title=""
                                     aria-describedby="tooltip229435">
                                </div>
                                <section>
                                    <div class="col-md-12">
                                        <t t-if="data">
                                            <section class="mt48 mb48">
                                                <div class="container" id="container_width">
                                                    <div class="row" id="detail_row">
                                                        <div class="col-md-6">
                                                            <h1 class="news-card-name" id="detail_top">
                                                                <t t-esc="data['program_name']"/>
                                                            </h1>
                                                            <div class="detail_date">Reported on:
                                                                <t t-esc="data['start_time']"/>
                                                            </div>
                                                            <p class="news-card-p" id="detail_top"
                                                               style="padding-top: 15px;">
                                                                <t t-esc="data['description']"/>
                                                            </p>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <img t-att-src="'https://api.em2.in' + str(data['poster_link'])"
                                                                 alt=""
                                                                 loading="lazy" class="depart_image" id="activity_image"
                                                                 style=""/>
                                                        </div>

                                                    </div>
                                                </div>
                                            </section>
                                        </t>
                                    </div>

                                </section>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
        <record id="programme_detail_page" model="website.page">
            <field name="url">/programme_detail</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="programme_detail"/>
            <field name="track">True</field>
        </record>
    </data>
</odoo>
