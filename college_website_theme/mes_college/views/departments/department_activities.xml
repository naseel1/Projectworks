<odoo>
    <data>
        <record id="department_activities" model="ir.ui.view">
            <field name="name">Department Activities</field>
            <field name="type">qweb</field>
            <field name="key">mes_college.department_activities</field>
            <field name="arch" type="xml">
                <t name="v" t-name="mes_college.department_activities_menu">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_structure">
                            <section class="page o_colored_level" style="padding: 0px; background-image: none;">
                                <div class="bg_color_club" data-original-title="" title=""
                                     aria-describedby="tooltip229435">
                                </div>
                                <section class="s_tabs pb o_colored_level" data-vcss="001" data-snippet="s_tabs"
                                         data-name="Tabs" style="background-image: none;">
                                    <div class="s_tabs_main row " style="margin: 0 32px;">
                                        <t t-if="data">
                                            <div class="col-12 col-md-3 o_colored_level s_tabs_nav" id="side_section"
                                                 data-original-title="" title="" aria-describedby="tooltip336631">
                                                <t t-if="data">
                                                    <div class="clubs">
                                                        <t t-esc="data['name']"/>
                                                    </div>
                                                    <div class="side-bar" id="sidebar">
                                                        <ul class="tabs-list1 nav nav-pills  flex-column"
                                                            style="padding-inline-start: 0;">
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id'])"
                                                                       data-original-title="" title=""
                                                                       class="nav-link ">
                                                                        Home
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/faculty'"
                                                                       data-original-title="" title=""
                                                                       class="nav-link ">
                                                                        Faculties
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/programme?dep_id=' + str(data['dep_id'])"
                                                                       data-original-title="" title="" class="nav-link">
                                                                        Programmes
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a href="/chemistry_reports" data-original-title=""
                                                                       title=""
                                                                       class="nav-link">
                                                                        Reports
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/activities'"
                                                                       data-original-title="" title=""
                                                                       class="nav-link active">
                                                                        Activities
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/facilities?dep_id=' + str(data['dep_id'])"
                                                                       data-original-title="" title=""
                                                                       class="nav-link ">
                                                                        Facilities
                                                                    </a>
                                                                </t>
                                                            </li>

                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a href="'/department/' + str(data['dep_id']) + '/exam_results'"
                                                                       title="" class="nav-link">
                                                                        Exam Results
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/dep_gallery'"
                                                                       data-original-title="" title="" class="nav-link">
                                                                        Gallery
                                                                    </a>
                                                                </t>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </t>
                                            </div>
                                        </t>

                                        <div class="col-12 col-md-9 order-1 order-md-2 pt48 pb48 o_colored_level">
                                            <div class="oe_structure oe_empty"
                                                 data-editor-sage="DRAG BUILDING BLOCKS HERE">
                                                <section id="departments_page">
                                                    <h2 class="page_head" id="department_subhead">Activities
                                                    </h2>
                                                    <div class="row" style="row-gap:2rem;">
                                                        <t t-foreach="event_data" t-as="events">
                                                            <section class="news-card o_colored_level depart_news"
                                                                     style="background-image: none;" id="news_cards">
                                                                <div class="news-card-image">
                                                                    <img t-att-src="'https://api.em2.in' + str(events['poster_link'])"
                                                                         alt="" loading="lazy" id="news-card-image"
                                                                         style="min-height:200px !important;"/>
                                                                </div>
                                                                <div class="news-card-box">
                                                                    <h1 class="news-card-name">
                                                                        <t t-esc="events['program_name']"/>
                                                                    </h1>
                                                                    <p class="news-card-p">
                                                                        <t t-esc="events['description']"/>
                                                                    </p>
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/' + str(events['program_details_id']) + '/activitydetails'"
                                                                       class="read_more">Read More
                                                                        <span class="fa fa-long-arrow-right"
                                                                              data-bs-original-title="" title=""
                                                                              aria-describedby="tooltip544395"/>
                                                                    </a>
                                                                </div>
                                                            </section>
                                                        </t>
                                                    </div>
                                                </section>


                                            </div>

                                        </div>

                                    </div>
                                </section>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
        <record id="department_activities_page" model="website.page">
            <field name="url">/activities</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="department_activities"/>
            <field name="track">True</field>
        </record>
    </data>
</odoo>
