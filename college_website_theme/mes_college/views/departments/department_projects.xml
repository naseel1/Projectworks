<odoo>
    <data>
        <record id="department_projects" model="ir.ui.view">
            <field name="name">Department Projects</field>
            <field name="type">qweb</field>
            <field name="key">mes_college.department_projects</field>
            <field name="arch" type="xml">
                <t name="v" t-name="mes_college.department_projects_menu">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_structure">
                            <section class="page o_colored_level" style="padding: 0px; background-image: none;">
                                <div class="bg_color_club" data-original-title="" title=""
                                     aria-describedby="tooltip229435">
                                </div>
                                <section class="s_tabs pb o_colored_level" data-vcss="001" data-snippet="s_tabs"
                                         data-name="Tabs" style="background-image: none;">
                                    <div class="s_tabs_main row " style="margin: 0 32px;">
                                        <t t-if="data">
                                            <div class="col-12 col-md-3 o_colored_level s_tabs_nav" id="side_section"
                                                 data-original-title=""
                                                 title="" aria-describedby="tooltip336631">
                                                <t t-if="data">
                                                    <div class="clubs">
                                                        <t t-esc="data['name']"/>
                                                    </div>
                                                    <div class="side-bar" id="sidebar">
                                                        <ul class="tabs-list1 nav nav-pills  flex-column"
                                                            style="padding-inline-start: 0;">
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id'])"
                                                                       data-original-title="" title=""
                                                                       class="nav-link ">
                                                                        Home
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/faculty'"
                                                                       data-original-title="" title="" class="nav-link">
                                                                        Faculties
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/programme?dep_id=' + str(data['dep_id'])"
                                                                       data-original-title="" title="" class="nav-link">
                                                                        Programmes
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a href="/chemistry_reports"
                                                                       data-original-title="" title="" class="nav-link">
                                                                        Reports
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/activities'"
                                                                       data-original-title="" title=""
                                                                       class="nav-link ">
                                                                        Activities
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <t t-if="data.get('has_research_center')">
                                                                <li id="sidebar-li" class="nav-item">
                                                                    <t t-if="data">
                                                                        <a t-att-href="'/department/' + str(data['dep_id']) + '/projects'"
                                                                           data-original-title="" title=""
                                                                           class="nav-link active">
                                                                            Projects
                                                                        </a>
                                                                    </t>
                                                                </li>
                                                            </t>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/facilities?dep_id=' + str(data['dep_id'])"
                                                                       data-original-title="" title=""
                                                                       class="nav-link ">
                                                                        Facilities
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a href="'/department/' + str(data['dep_id']) + '/exam_results'"
                                                                       data-original-title="" title="" class="nav-link">
                                                                        Exam Results
                                                                    </a>
                                                                </t>
                                                            </li>
                                                            <li id="sidebar-li" class="nav-item">
                                                                <t t-if="data">
                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/dep_gallery'"
                                                                       data-original-title="" title="" class="nav-link">
                                                                        Gallery
                                                                    </a>
                                                                </t>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </t>
                                            </div>
                                        </t>
                                        <div class="col-12 col-md-9 order-1 order-md-2 pt48 pb48 o_colored_level">
                                            <div class="oe_structure oe_empty"
                                                 data-editor-sage="DRAG BUILDING BLOCKS HERE">
                                                <section id="departments_page">
                                                    <h2 class="page_head" id="department_subhead">Projects
                                                    </h2>
                                                    <div class="col-md-12 pt16">
                                                        <div id="myCollapse1700712777280" class="accordion"
                                                             role="tablist">
                                                            <t t-foreach="depart_project" t-as="projects">
                                                                <div class="card" id="project_card" data-name="Item">
                                                                    <a href="#" role="tab" data-bs-toggle="collapse"
                                                                       aria-expanded="true"
                                                                       class="card-header s_faq_collapse_right_icon collapsed"
                                                                       id="project_head"
                                                                       t-att-data-bs-target="'#card' + str(projects['id'])">
                                                                        <t t-if="projects['research_title']">
                                                                            <t t-esc="projects['research_title']"/>
                                                                        </t>
                                                                    </a>
                                                                    <div class="collapse "
                                                                         data-parent="#myCollapse1700712777280"
                                                                         role="tabpanel"
                                                                         t-att-id="'card' + str(projects['id'])">
                                                                        <div class="card-body p-5">
                                                                            <table class="milestone  pt32"
                                                                                   id="researches">
                                                                                <tbody>
                                                                                    <tr>
                                                                                        <th id="milestone_head">
                                                                                            Principal Investigator
                                                                                        </th>
                                                                                        <td style="border-top-right-radius:10px;">
                                                                                            <t t-if="projects['faculty']">

                                                                                                <t t-esc="projects['faculty']['name']"/>
                                                                                            </t>
                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <th id="milestone_head">
                                                                                            Type Of Project
                                                                                        </th>
                                                                                        <td>
                                                                                            <t t-if="projects['project_type']">
                                                                                                <t t-esc="projects['project_type']"/>
                                                                                            </t>
                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <th id="milestone_head">Funding
                                                                                            Agency
                                                                                        </th>
                                                                                        <td>
                                                                                            <t t-if="projects['funding_agency']">
                                                                                                <t t-esc="projects['funding_agency']"/>
                                                                                            </t>
                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <th id="milestone_head">
                                                                                            Project Amount
                                                                                        </th>
                                                                                        <td>
                                                                                            <t t-if="projects['project_amount']">
                                                                                                <t t-esc="projects['project_amount']"/>
                                                                                            </t>
                                                                                        </td>
                                                                                    </tr>
                                                                                    <tr>
                                                                                        <th id="milestone_head">
                                                                                            Project Status
                                                                                        </th>
                                                                                        <td>
                                                                                            <t t-if="projects['description']">
                                                                                                <t t-esc="projects['description']"/>
                                                                                            </t>
                                                                                        </td>
                                                                                    </tr>


                                                                                </tbody>

                                                                            </table>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </section>


                                            </div>

                                        </div>

                                    </div>
                                </section>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
        <record id="department_projects_page" model="website.page">
            <field name="url">/projects</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="department_projects"/>
            <field name="track">True</field>
        </record>
    </data>
</odoo>
