<odoo>
    <data>
        <record id="department_faculties_mes" model="ir.ui.view">
            <field name="name">Department Faculties</field>
            <field name="type">qweb</field>
            <field name="key">mes_college.department_faculties_mes</field>
            <field name="arch" type="xml">
                <t name="v" t-name="mes_college.department_faculties_menu">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_structure">
                            <section class="page o_colored_level" style="padding: 0px; background-image: none;">
                                <div class="bg_color_club" data-original-title="" title=""
                                     aria-describedby="tooltip229435">

                                </div>
                                <section class="s_tabs pb o_colored_level" data-vcss="001" data-snippet="s_tabs"
                                         data-name="Tabs" style="background-image: none;">
                                    <div class="s_tabs_main row " style="margin: 0 32px;">
                                        <t t-if="data">
                                            <div class="col-12 col-md-3 o_colored_level s_tabs_nav" id="side_section"
                                                 data-original-title="" title="" aria-describedby="tooltip336631">

                                                <div class="clubs">
                                                    <t t-if="data.get('name')">
                                                        <t t-esc="data['name']"/>
                                                    </t>
                                                </div>
                                                <div class="side-bar" id="sidebar">
                                                    <ul class="tabs-list1 nav nav-pills  flex-column"
                                                        style="padding-inline-start: 0;">

                                                        <li id="sidebar-li" class="nav-item">
                                                            <t t-if="data">
                                                                <a t-att-href="'/department/' + str(data['dep_id'])"
                                                                   data-original-title="" title="" class="nav-link ">
                                                                    Home
                                                                </a>
                                                            </t>
                                                        </li>
                                                        <li id="sidebar-li" class="nav-item">
                                                            <t t-if="data">
                                                                <a t-att-href="'/department/' + str(data['dep_id']) + '/faculty'"
                                                                   data-original-title="" title=""
                                                                   class="nav-link active">
                                                                    Faculties
                                                                </a>
                                                            </t>
                                                        </li>
                                                        <li id="sidebar-li" class="nav-item">
                                                            <t t-if="data">
                                                                <a t-att-href="'/department/' + str(data['dep_id']) + '/programme?dep_id=' + str(data['dep_id'])"
                                                                   data-original-title="" title="" class="nav-link ">
                                                                    Programmes
                                                                </a>
                                                            </t>
                                                        </li>
                                                        <li id="sidebar-li" class="nav-item">
                                                            <t t-if="data">
                                                                <a href="/chemistry_reports"
                                                                   data-original-title="" title="" class="nav-link">
                                                                    Reports
                                                                </a>
                                                            </t>
                                                        </li>
                                                        <li id="sidebar-li" class="nav-item">
                                                            <t t-if="data">
                                                                <a t-att-href="'/department/' + str(data['dep_id']) + '/activities'"
                                                                   data-original-title="" title="" class="nav-link ">
                                                                    Activities
                                                                </a>
                                                            </t>
                                                        </li>
                                                        <li id="sidebar-li" class="nav-item">
                                                            <t t-if="data">
                                                                <a t-att-href="'/department/' + str(data['dep_id']) + '/facilities?dep_id=' + str(data['dep_id'])"
                                                                   data-original-title="" title="" class="nav-link">
                                                                    Facilities
                                                                </a>
                                                            </t>
                                                        </li>
                                                        <li id="sidebar-li" class="nav-item">
                                                            <t t-if="data">
                                                                <a href="/chemistry_exam_results"
                                                                   data-original-title="" title="" class="nav-link">
                                                                    Exam Results
                                                                </a>
                                                            </t>
                                                        </li>
                                                        <li id="sidebar-li" class="nav-item">
                                                            <t t-if="data">
                                                                <a t-att-href="'/department/' + str(data['dep_id']) + '/dep_gallery'"
                                                                   data-original-title="" title="" class="nav-link">
                                                                    Gallery
                                                                </a>
                                                            </t>
                                                        </li>
                                                    </ul>
                                                </div>

                                            </div>
                                        </t>

                                        <div class="col-12 col-md-9 order-1 order-md-2 pt48 pb48 o_colored_level">
                                            <div class="oe_structure oe_empty"
                                                 data-editor-sage="DRAG BUILDING BLOCKS HERE">
                                                <section>
                                                    <section id="departments_page">
                                                        <t t-if="data">
                                                            <h2 class="page_head" id="department_subhead">
                                                                Faculties
                                                            </h2>
                                                        </t>
                                                    </section>
                                                    <section>
                                                        <section>

                                                            <t t-if="data">
                                                                <div class="row">
                                                                    <div class="col-md-3 mb16" style="min-width:300px;">
                                                                        <t t-if="data.get('academic_head')">
                                                                            <div class="faculties">
                                                                                <div class="faculty_img">
                                                                                    <t t-if="data.get('academic_head')">
                                                                                        <img t-att-src="data['academic_head']['image']"
                                                                                             class="w-100 h-100"/>
                                                                                    </t>
                                                                                </div>
                                                                                <t t-if="data.get('academic_head')">
                                                                                    <div t-esc="data['academic_head']['name']"
                                                                                         class="faculty_name"/>
                                                                                </t>
                                                                                <t t-if="data.get('academic_head')">
                                                                                    <div class="designation">
                                                                                        Head Of The Department
                                                                                    </div>
                                                                                </t>
                                                                                <t t-if="data.get('academic_head')">
                                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/faculty/' + str(data['academic_head']['faculty_id']) + '/profile'"
                                                                                       class="view_profile">View Profile
                                                                                    </a>
                                                                                </t>
                                                                            </div>
                                                                        </t>
                                                                    </div>
                                                                    <div class="col-md-8">
                                                                        <div class="content_text">
                                                                            <!--                                                                                <t t-esc="data['department_head']['head_type']"/>-->
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row" style="row-gap:1rem;">
                                                                    <t t-foreach="data.get('faculties', [])"
                                                                       t-as="faculty">
                                                                        <!-- Checking if 'name' attribute exists before accessing -->

                                                                        <!-- Accessing faculty names -->
                                                                        <div class=" col-md-3" style="min-width:300px;">
                                                                            <div class="faculties">
                                                                                <div class="faculty_img">
                                                                                    <t t-if="faculty.get('image')">
                                                                                        <img t-att-src=" str(faculty['image'])"
                                                                                             class="w-100 h-100"/>
                                                                                    </t>
                                                                                </div>
                                                                                <t t-if="faculty.get('name')">
                                                                                    <div t-esc="faculty['name']"
                                                                                         class="faculty_name"/>
                                                                                </t>
                                                                                <t t-if="faculty.get('designation')">
                                                                                    <div t-esc="faculty['designation']"
                                                                                         class="designation"/>
                                                                                </t>
                                                                                <t t-if="faculty.get('faculty_id')">
                                                                                    <a t-att-href="'/department/' + str(data['dep_id']) + '/faculty/' + str(faculty['faculty_id']) + '/profile'"
                                                                                       class="view_profile">View Profile
                                                                                    </a>
                                                                                </t>
                                                                            </div>
                                                                        </div>

                                                                    </t>
                                                                </div>
                                                            </t>
                                                        </section>

                                                    </section>
                                                </section>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
        <record id="department_faculties_mes_page" model="website.page">
            <field name="url">/faculty</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="department_faculties_mes"/>
            <field name="track">True</field>
        </record>
    </data>
</odoo>
