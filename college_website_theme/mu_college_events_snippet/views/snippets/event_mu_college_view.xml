<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="new_record_cover_mu_college">
        <t t-call-assets="website.assets_frontend"/>
        <t t-set="_cp" t-value="_cp or json.loads(_record.cover_properties)"/>
        <t t-set="_name" t-value="_name or _record._name"/>
        <t t-set="_id" t-value="_id or _record.id"/>
        <t t-set="_bg" t-value="_bg or _record._get_background(height=_resize_height, width=_resize_width)"/>
        <t t-set="default_cover_name">Cover</t>
        <div t-att-data-name="display_opt_name or default_cover_name"
             t-att-style="_cp.get('background_color_style')"
             t-att-data-use_size="use_size"
             t-att-data-use_filters="use_filters"
             t-att-data-use_text_align="use_text_align"
             t-att-data-res-model="request.env.user.has_group('website.group_website_publisher') and _name"
             t-att-data-res-id="request.env.user.has_group('website.group_website_publisher') and _id"
             t-attf-class="o_record_cover_container  #{_cp.get('background_color_class')} #{use_size and _cp.get('resize_class')} #{use_text_align and _cp.get('text_align_class')} #{additionnal_classes}">
            <a t-att-href="data['call_to_action_url']">
                <section class="event-card o_colored_level mu_college_events" style="background-image: none;">
                    <div class="event-card-image" t-field="record.event_image" t-options="{'widget': 'image'}">
                    </div>
                    <div class="event-card-box">
                        <div class="news_date">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                 fill="none">
                                <path fill-rule="evenodd" clip-rule="evenodd"
                                      d="M6.75 2.25C6.94891 2.25 7.13968 2.32902 7.28033 2.46967C7.42098 2.61032 7.5 2.80109 7.5 3V4.5H16.5V3C16.5 2.80109 16.579 2.61032 16.7197 2.46967C16.8603 2.32902 17.0511 2.25 17.25 2.25C17.4489 2.25 17.6397 2.32902 17.7803 2.46967C17.921 2.61032 18 2.80109 18 3V4.5H18.75C19.5456 4.5 20.3087 4.81607 20.8713 5.37868C21.4339 5.94129 21.75 6.70435 21.75 7.5V18.75C21.75 19.5456 21.4339 20.3087 20.8713 20.8713C20.3087 21.4339 19.5456 21.75 18.75 21.75H5.25C4.45435 21.75 3.69129 21.4339 3.12868 20.8713C2.56607 20.3087 2.25 19.5456 2.25 18.75V7.5C2.25 6.70435 2.56607 5.94129 3.12868 5.37868C3.69129 4.81607 4.45435 4.5 5.25 4.5H6V3C6 2.80109 6.07902 2.61032 6.21967 2.46967C6.36032 2.32902 6.55109 2.25 6.75 2.25ZM20.25 11.25C20.25 10.8522 20.092 10.4706 19.8107 10.1893C19.5294 9.90804 19.1478 9.75 18.75 9.75H5.25C4.85218 9.75 4.47064 9.90804 4.18934 10.1893C3.90804 10.4706 3.75 10.8522 3.75 11.25V18.75C3.75 19.1478 3.90804 19.5294 4.18934 19.8107C4.47064 20.092 4.85218 20.25 5.25 20.25H18.75C19.1478 20.25 19.5294 20.092 19.8107 19.8107C20.092 19.5294 20.25 19.1478 20.25 18.75V11.25Z"
                                      fill="#141F7E"/>
                            </svg>
                            <t t-set="formatted_date" t-value="record.post_date.strftime('%d %b %Y')"/>
                            <span t-esc="formatted_date"/>
                        </div>
                        <h1 class="news-card-name" t-field="record.name"/>

                        <p class="news-card-p">
                            <span t-field="record.event_description"></span>
                        </p>
                    </div>

                </section>
            </a>
            <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>
            <style>
                .s_blog_post_mu_college .container{
                padding:0;
                }
                .s_blog_post_mu_college a:link{
                color: #000 !important;
                text-decoration:none !important;
                }
                .s_blog_post_mu_college .col-6{
                width:100%;
                padding-bottom: 26px;
                }
                .o_cc3 {
                background-color: transparent;
                }
                .event-card{
                width: 100%;
                display: flex ;
                align-items: center;
                border-radius: 20px;
                }
                .event-card-image{
                min-width: 376px;
                height: 272px;
                border-radius: 20px 0 0 20px;
                }
                .event-card-image img{
                height: 100%;
                width: 100%;
                object-fit: cover;
                border-radius: 20px 0 0 20px;
                }
                .event-card-box{
                border-right: 3px solid #141F7E;
                background: #F5F8FF;
                height: 272px;
                padding: 14px;
                display: block;
                }
                .news_date {
                color: #000;
                font-family: Inter;
                font-size: 16px;
                font-style: normal;
                font-weight: 400;
                line-height: 28px;
                padding-bottom: 10px;
                }
                .news_date span{
                color: #000;
                font-family: Inter;
                font-size: 16px;
                font-style: normal;
                font-weight: 400;
                line-height: 28px;
                }
                .news-card-name{
                color: #000;
                font-family: 'Inter' !important;
                font-size: 24px;
                font-style: normal;
                font-weight: 500;
                line-height: 29px;
                margin: 0;
                }
                .event-card-box p{
                color: #383838;
                text-align: justify;
                font-family: Urbanist;
                font-size: 16px;
                font-style: normal;
                font-weight: 400;
                line-height: 26px;
                margin: 0;
                }
            </style>
        </div>
    </template>
    <template id="dynamic_filter_template_blog_post_mu_college" name="MU College blogs">
        <div t-foreach="records" t-as="data" class=" w-100 s_blog_posts_post">
            <t t-set="record" t-value="data['_record']"/>
            <div class="s_blog_posts_post_cover_mu_college">
                <t t-call="mu_college_events_snippet.new_record_cover_mu_college">
                    <t t-set="_record" t-value="record"/>
                    <t t-set="use_filters" t-value="True"/>
                    <t t-set="additionnal_classes" t-value="' '"/>
                </t>
            </div>
        </div>
    </template>
</odoo>
