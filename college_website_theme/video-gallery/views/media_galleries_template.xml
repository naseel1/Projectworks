<odoo>
    <template id="media_gallery_template" name="Media Gallery Page">
        <t t-call="website.layout">
            <div class="container">
                <h2 class="welcome-h2" style="    margin-left: 15px;" data-oe-model="ir.ui.view" data-oe-id="3062"
                    data-oe-field="arch" data-oe-xpath="/t[1]/t[1]/div[1]/h2[1]">
                    <span>Video Gallery
                        <br/>
                        <img src="/sahya_college_website/static/img/Heading.svg" loading="lazy"/>
                    </span>
                </h2>
                <div class="row s_image_gallery">
                    <t t-foreach="media_records" t-as="media">
                        <div class="col-lg-4 col-md-6">
                            <div class="galleries">
                                <!-- Display Video -->
                                <t t-if="media.media_type == 'video'">
                                    <video controls="" class="w-100">
                                        <source t-att-src="media.url" type="video/mp4"/>
                                        Your browser does not support the video tag.
                                    </video>
                                </t>

                                <!-- Display YouTube Embed -->
                                <t t-if="media.media_type == 'youtube'">
                                    <iframe t-att-src="media.get_youtube_embed_url()" class="w-100" height="200"
                                            frameborder="0" allowfullscreen=""></iframe>
                                </t>
                                <h2 class="gallery-name">
                                    <t t-esc="media.name"/>
                                </h2>
                            </div>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>
