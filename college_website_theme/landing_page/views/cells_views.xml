<odoo>
    <record id="view_cells_manage_kanban" model="ir.ui.view">
        <field name="name">cells.manage.kanban</field>
        <field name="model">cells.manage</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="cell_name"/>
                <field name="cell_description"/>
                <field name="incharge_name"/>
                <field name="incharge_image"/>
                <field name="report_ids"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_card">
                            <strong>
                                <field name="cell_name"/>
                            </strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_cells_manage_config_form" model="ir.ui.view">
        <field name="name">cells.manage.config.form</field>
        <field name="model">cells.manage</field>
        <field name="arch" type="xml">
            <form string="cells">
                <sheet>
                    <group>
                        <field name="cell_name"/>
                        <field name="cell_description"/>
                        <field name="incharge_name"/>
                        <field name="incharge_image"/>

                    </group>
                    <group string="Reports">
                        <field name="report_ids">
                            <tree editable="bottom">
                                <field name="report_title"/>
                                <field name="report_file" filename="report_filename"/>
                                <field name="report_filename" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_cells_manage" model="ir.actions.act_window">
        <field name="name">cells</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cells.manage</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="view_cells_manage_kanban"/>
    </record>
    <menuitem id="menu_cells_manage"
              name="Cells"
              parent="menu_landing_page_root"
              action="action_cells_manage"
              sequence="25"
              groups="landing_page.group_cells_manage_admin"/>
</odoo>