<odoo>

    <!-- Kanban View -->
    <record id="view_association_manage_kanban" model="ir.ui.view">
        <field name="name">association.manage.kanban</field>
        <field name="model">association.manage</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="association_name"/>
                <field name="association_description"/>
                <field name="activity_ids"/>
                <field name="incharge_name"/>
                <field name="incharge_image"/>
                <field name="report_ids"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click o_kanban_card">
                            <strong>
                                <field name="association_name"/>
                            </strong>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_association_manage_config_form" model="ir.ui.view">
        <field name="name">association.manage.config.form</field>
        <field name="model">association.manage</field>
        <field name="arch" type="xml">
            <form string="Association">
                <sheet>
                    <group>
                        <field name="association_name"/>
                        <field name="association_description"/>
                        <field name="incharge_name"/>
                        <field name="incharge_image"/>
                    </group>

                    <notebook>
                        <page string="Reports">
                            <field name="report_ids">
                                <tree editable="bottom">
                                    <field name="report_title"/>
                                    <field name="report_file" filename="report_filename"/>
                                    <field name="report_filename" readonly="1"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Activities">
                            <field name="activity_ids" context="{'default_association_id': active_id}" mode="tree,form">
                                <tree>
                                    <field name="activity_title"/>

                                </tree>
                                <form string="Activity Details">
                                    <group>
                                        <field name="activity_title"/>
                                        <field name="activity_description"/>
                                    </group>
                                    <group string="Activity Images">
                                        <field name="image_ids">
                                            <tree editable="bottom">
                                                <field name="image"/>
                                            </tree>
                                        </field>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to Manage Associations -->
    <record id="action_association_manage" model="ir.actions.act_window">
        <field name="name">Associations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">association.manage</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="view_association_manage_kanban"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_association_manage"
              name="Association"
              parent="menu_landing_page_root"
              action="action_association_manage"
              sequence="25"
              groups="landing_page.group_associations_manage_admin"/>

</odoo>
