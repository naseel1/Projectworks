<odoo>
    <record id="view_facilities_form_simple" model="ir.ui.view">
        <field name="name">facilities.manage.simple.form</field>
        <field name="model">facilities.manage</field>
        <field name="arch" type="xml">
            <form string="Facility">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="cover_image"/>
                    </group>

                    <notebook>
                        <page string="Sub Facilities">
                            <field name="child_ids" context="{'default_parent_id': active_id}" mode="tree,form">
                                <tree>
                                    <field name="name"/>
                                </tree>
                                <form string="Sub Facility Details">
                                    <group>
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="image_ids">
                                            <tree editable="bottom">
                                                <field name="image" widget="image" options="{'size': [64, 64]}"/>
                                            </tree>
                                        </field>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_facilities_simple" model="ir.actions.act_window">
        <field name="name">Facilities</field>
        <field name="res_model">facilities.manage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_facilities_simple"
              name="Facilities"
              parent="menu_landing_page_root"
              action="action_facilities_simple"
              sequence="30"
              groups="landing_page.group_facilities_manage_admin"/>

</odoo>
