<odoo>
    <record id="view_facilities_tree" model="ir.ui.view">
        <field name="name">facilities.tree</field>
        <field name="model">facility.manage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_facilities_form" model="ir.ui.view">
        <field name="name">facilities.manage.simple.form</field>
        <field name="model">facility.manage</field>
        <field name="arch" type="xml">
            <form string="Facility">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="images_ids">
                            <tree editable="bottom">
                                <field name="image" widget="image" options="{'size': [64, 64]}"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_facilities_manage" model="ir.actions.act_window">
        <field name="name">Facilities</field>
        <field name="res_model">facility.manage</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_facilities_tree"/>
    </record>
    <menuitem id="menu_website_manage_root" name="Facilities" parent="website.menu_website_configuration"
              sequence="20"/>
    <menuitem id="menu_facilities_manage"
              name="Manage Facilities"
              parent="menu_website_manage_root"
              action="action_facilities_manage"
              sequence="10"
              groups="facilities_manage.group_facility_manage_admin"/>

</odoo>
