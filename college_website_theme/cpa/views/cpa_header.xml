<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="template_cpa_header" inherit_id="website.layout" name="Header CPA ">
        <xpath expr="//div[@id='wrapwrap']/header" position="replace">
            <link rel="preconnect" href="https://fonts.googleapis.com"/>
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin=""/>
            <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&amp;display=swap"
                  rel="stylesheet"/>

            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"/>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"/>
            <script type="text/javascript">
                document.addEventListener("DOMContentLoaded", () =&gt; {
                const navToggler = document.getElementById("navToggler");
                const topMenuCollapse = document.getElementById("top_menu_collapse");
                const homepage = document.querySelector("#wrapwrap");

                // Function to handle toggle state
                function toggleMenu() {
                const isExpanded = navToggler.getAttribute("aria-expanded") === "true";

                if (isExpanded) {
                // Add classes to show the menu
                topMenuCollapse.classList.add("show");
                topMenuCollapse.style.transition = "all 0.3s ease-in-out"; // Ensure smooth transition
                homepage.classList.add("lock-scroll");
                } else {
                // Remove classes to hide the menu
                topMenuCollapse.classList.remove("show");
                homepage.classList.remove("lock-scroll");
                }
                }

                // Listen for clicks on the toggler
                navToggler.addEventListener("click", () =&gt; {
                // Introduce a slight delay to sync with Bootstrap transitions if needed
                requestAnimationFrame(toggleMenu);
                });

                // Ensure the initial state is synchronized on page load
                toggleMenu();
                });
            </script>
            <style>
                .cpa_nav .nav-item .cpa_link{
                display: flex;
                align-items: center;
                }
                #top .dropdown-toggle::after{
                align-items: center;
                right: auto;
                position: relative;
                display: flex;
                top: auto;
                transform: none;
                margin-left: 5px;
                transition: all 0.3s ease-in-out;
                }

                header#top {
                z-index: 10300;
                }
                #top_menu_collapse {
                justify-content: end;
                }
                .cpa_nav .nav-item .cpa_link.show{
                color: #0E5D7C !important;
                }
                .cpa_nav .nav-item .cpa_link
                display: flex;
                align-items: center;
                }
                #top .dropdown-toggle::after {
                align-items: center;
                right: auto;

                position: relative;

                display: flex;
                top: auto;
                transform: none;
                margin-left: 5px;
                transition: all 0.3s ease-in-out;
                }
                @media(max-width: 900px){
                .navbar-light .navbar-toggler{
                z-index: 11031;
                }
                .cpa_nav{
                gap:0px;
                }
                }
            </style>
            <header id="top" data-anchor="true" data-name="Header" class="header">
