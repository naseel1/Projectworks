<odoo>
    <data>
        <record id="event_detail" model="ir.ui.view">
            <field name="name">Event Activities</field>
            <field name="type">qweb</field>
            <field name="key">cpa.event_detail</field>
            <field name="arch" type="xml">
                <t name="v" t-name="cpa.event_detail_menu">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_structure">
                            <section class="page o_colored_level" style="padding: 0px; background-image: none;">
                                <div class="bg_color_club" data-original-title="" title=""
                                     aria-describedby="tooltip229435">
                                </div>
                                <section>
                                    <div class="col-md-12">
                                        <t t-if="data">
                                            <section class="mt48 mb48">
                                                <div class="container" id="container_width">
                                                    <div class="row" id="detail_row">
                                                        <div class="col-md-6">
                                                            <h1 class="news-card-name" id="detail_top">
                                                                <t t-if="data['program_name']">
                                                                    <t t-esc="data['program_name']"/>
                                                                </t>
                                                            </h1>
                                                            <t t-if="data['start_time']">
                                                                <div class="detail_date" style="padding-top: 0px;">
                                                                    Reported on:
                                                                    <t t-esc="data['start_time']"/>
                                                                </div>
                                                            </t>
                                                            <p class="news-card-p" id="detail_top"
                                                               style="padding-top: 5px;font-size: 14px;height: auto ! IMPORTANT;">
                                                                <t t-if="data['description']">
                                                                    <t t-esc="data['description']"/>
                                                                </t>
                                                            </p>
                                                            <p class="news-card-p" id="detail_top"
                                                               style="padding-top: 5px;font-size: 16px;height: auto ! IMPORTANT;">
                                                                <t t-if="data['report']">
                                                                    <t t-esc="data['report']"/>
                                                                </t>
                                                            </p>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <!--      <t t-if="data['poster_link']">-->
                                                            <!--    <img t-att-src=" str(data['poster_link'])" alt="" loading="lazy" class="depart_image" id="activity_image" style="padding: 5px;object-fit: contain;top:200px;position:sticky;height:450px;"/>-->
                                                            <!--</t>-->
                                                            <div id="event_detail"
                                                                 class="carousel slide s_carousel s_carousel_default "
                                                                 data-bs-ride="carousel " style="padding-bottom:20px;"
                                                                 data-bs-interval="10000">
                                                                <div id="arrows" data-oe-model="ir.ui.view"
                                                                     data-oe-id="1468" data-oe-field="arch"
                                                                     data-oe-xpath="/t[1]/t[1]/div[1]/section[1]/section[1]/div[1]/t[1]/section[1]/div[1]/div[1]/div[3]/div[1]">
                                                                    <t t-if="data['attachments']">
                                                                        <a class="alumni-left" id="department_left"
                                                                           href="#event_detail" role="button"
                                                                           data-bs-slide="prev"
                                                                           style="width: 45px;left:10px;">
                                                                            <img src="/mes_college/static/img/alumni_left.svg"
                                                                                 loading="lazy" data-original-title=""
                                                                                 title=""
                                                                                 aria-describedby="tooltip850287"
                                                                                 style=""/>
                                                                            <span class="sr-only">Previous</span>
                                                                        </a>
                                                                        <a class="alumni-right" id="department_right"
                                                                           href="#event_detail" role="button"
                                                                           data-bs-slide="next" style="width: 45px;">
                                                                            <img src="/mes_college/static/img/alumni_right.svg"
                                                                                 loading="lazy" style=""/>
                                                                            <span class="sr-only">Next</span>
                                                                        </a>
                                                                    </t>
                                                                </div>
                                                                <div class="carousel-inner"
                                                                     style="    border-radius: 10px;">

                                                                    <t t-foreach="data['attachments']"
                                                                       t-as="attachment">
                                                                        <div class="carousel-item department-items ">
                                                                            <div class="achievement">
                                                                                <t t-if="not attachment['is_link']">
                                                                                    <img t-att-src="attachment['attachment_link']"
                                                                                         alt="" loading="lazy"
                                                                                         class="achievement-image"/>
                                                                                </t>
                                                                            </div>
                                                                        </div>
                                                                    </t>

                                                                </div>
                                                            </div>

                                                        </div>


                                                        <style>
                                                            .achievement{box-shadow: rgba(0, 0, 0, 0.24) 0px 1px
                                                            1px;width: auto; min-height: 350px
                                                            !important;object-fit:contain; border-radius: 10px;}
                                                            .achievement-image{
                                                            width: 100%;height: 100%; border-radius:
                                                            10px;object-fit:contain;min-height: 350px !important;
                                                            }
                                                            .carousel-item.active, .carousel-item-next,
                                                            .carousel-item-prev {
                                                            display: flex;
                                                            }
                                                            .department-items{
                                                            min-height: 350px;
                                                            max-height: 350px;
                                                            border-radius: 10px;
                                                            }
                                                            #event_detail{
                                                            margin-top: 40px;
                                                            padding-bottom: 20px;
                                                            top: 200px;
                                                            position: sticky;
                                                            }
                                                        </style>

                                                    </div>
                                                </div>
                                            </section>
                                        </t>
                                    </div>

                                </section>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
        <record id="event_detail_page" model="website.page">
            <field name="url">/event_detail</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="event_detail"/>
            <field name="track">True</field>
        </record>
    </data>
</odoo>
