<odoo>
    <data>
        <record id="exam_results_view" model="ir.ui.view">
            <field name="name">Exam Results View</field>
            <field name="type">qweb</field>
            <field name="key">cpa.exam_results_view</field>
            <field name="arch" type="xml">
                <t name="v" t-name="cpa.exam_results_view_menu">
                    <t t-call="website.layout">
                        <div id="wrap" class="oe_structure">
                            <section class="page o_colored_level pt32 pb48"
                                     style="padding: 0px; background-image: none;">
                                <h2 class="page_head pb16" style="text-align:center;">
                                    Internal Marks
                                </h2>
                                <t t-if="internal">
                                    <table class="milestone ">
                                        <tbody>
                                            <tr>
                                                <th>
                                                    Register No.
                                                </th>
                                                <th>
                                                    Roll No.
                                                </th>
                                                <th>
                                                    Name
                                                </th>
                                                <t t-foreach="internal_paper" t-as="paper">
                                                    <th>
                                                        <t t-esc="paper['paper_code']"/>
                                                    </th>
                                                </t>
                                            </tr>
                                            <t t-foreach="internal" t-as="student">
                                                <tr>
                                                    <td>
                                                        <t t-esc="student['university_reg_no']"/>
                                                    </td>
                                                    <td>
                                                        <t t-esc="student['roll_no']"/>
                                                    </td>
                                                    <td>
                                                        <t t-esc="student['std_name']"/>
                                                    </td>
                                                    <t t-foreach="student.get('childs', [])" t-as="childs">
                                                        <td>

                                                            <t t-esc="childs['internal_total_mark'] if childs['internal_total_mark'] is not none else '-'"/>


                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </t>
                            </section>
                        </div>
                    </t>
                </t>
            </field>
        </record>
        <record id="exam_results_view_page" model="website.page">
            <field name="url">/view</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="exam_results_view"/>
            <field name="track">True</field>
        </record>
    </data>
</odoo>

