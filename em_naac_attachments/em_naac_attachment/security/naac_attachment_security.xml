<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--*************************************************Categories*************************************************-->
    <record model="ir.module.category" id="module_category_naac_iqac">
        <field name="name">Naac/IQAC</field>
        <field name="description">Helps you manage Attachments</field>
        <field name="parent_id" ref="base.module_category_website"/>
        <field name="sequence">35</field>
    </record>

    <!--******************************************intranet Managing Users******************************************-->

    <record id="group_naac_iqac_user" model="res.groups">
        <field name="name">User</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="category_id" ref="module_category_naac_iqac"/>
    </record>

    <record id="group_naac_iqac_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_naac_iqac"/>
        <field name="implied_ids" eval="[(4, ref('group_naac_iqac_user'))]"/>
    </record>

    <record id="group_naac_iqac_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="module_category_naac_iqac"/>
        <field name="implied_ids" eval="[(4, ref('group_naac_iqac_manager'))]"/>
    </record>


    <!--******************************************Intranet Managing Public Security Rules******************************************-->
    <record id="rule_naac_subcategory_page_public" model="ir.rule">
        <field name="name">Subcategory Page Public Rule</field>
        <field name="model_id" ref="em_naac_attachment.model_naac_subcategory"/>
        <field name="domain_force">[('website_published', '=', True)]</field>
        <field name="groups" eval="[(4, ref('base.group_public')), (4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

</odoo>
