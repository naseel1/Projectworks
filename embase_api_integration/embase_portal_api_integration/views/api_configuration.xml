<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_embase_api_config_tree" model="ir.ui.view">
        <field name="name">embase.api.config.tree</field>
        <field name="model">embase.api_config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" required="1"/>
                <field name="base_url" required="1"/>
                <field name="api_token" required="1"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_embase_api_config_form" model="ir.ui.view">
        <field name="name">embase.api.config.form</field>
        <field name="model">embase.api_config</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_do_confirm" string="Confirm" type="object" class="oe_highlight"
                            data-hotkey="w" title="Confirm" states="draft"/>
                    <button name="action_do_draft" string="Set to Draft" type="object" class="oe_highlight"
                            data-hotkey="d" title="Set to Draft" states="confirm"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirm"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="base_url" required="1"/>
                        <field name="api_token" required="1"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_embase_api_config">
        <field name="name">Embase Integration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">embase.api_config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Tokens
            </p>
        </field>
    </record>
    <!-- Menu Item for embase.api_config -->
    <menuitem id="menu_embase_api_integration"
              name="Embase Integration"
              action="action_embase_api_config"
              parent="website.menu_website_global_configuration"
              groups="embase_portal_api_integration.group_embase_portal_integration_admin"
              sequence="20"/>
</odoo>
