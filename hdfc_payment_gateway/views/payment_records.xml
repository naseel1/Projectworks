<odoo>
    <!-- SSR Payments -->
    <record id="view_payment_ssr_tree" model="ir.ui.view">
        <field name="name">payment.ssr.tree</field>
        <field name="model">payment.ssr</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_id"/>
                <field name="customer_id"/>
                <field name="customer_email"/>
                <field name="amount"/>
                <field name="payment_status"/>
                <field name="payment_date"/>
                <field name="package_prices"/>
                <field name="institution_name"/>
                <field name="institution_domain"/>
                <field name="sub_domain"/>
                <field name="address"/>
            </tree>
        </field>
    </record>

    <record id="view_payment_ssr_form" model="ir.ui.view">
        <field name="name">payment.ssr.form</field>
        <field name="model">payment.ssr</field>
        <field name="arch" type="xml">
            <form string="SSR Payment">
                <sheet>
                    <group>
                        <field name="order_id"/>
                        <field name="customer_id"/>
                        <field name="customer_email"/>
                        <field name="customer_phone"/>
                        <field name="amount"/>
                        <field name="payment_status"/>
                        <field name="payment_date"/>
                        <field name="package_prices"/>
                        <field name="institution_name"/>
                        <field name="institution_domain"/>
                        <field name="sub_domain"/>
                        <field name="address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_payment_ssr">
        <field name="name">SSR Payments</field>
        <field name="res_model">payment.ssr</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_payment_ssr"
              name="SSR Payments"
              parent="website.menu_website_global_configuration"
              action="action_payment_ssr"
              groups="hdfc_payment_gateway.group_payment_success_admin"
              sequence="20"/>

    <!-- Onboarding Payments -->
    <record id="view_payment_onboarding_tree" model="ir.ui.view">
        <field name="name">payment.onboarding.tree</field>
        <field name="model">payment.onboarding</field>
        <field name="arch" type="xml">
            <tree>
                <field name="order_id"/>
                <field name="customer_id"/>
                <field name="customer_email"/>
                <field name="plan_name"/>
                <field name="amount"/>
                <field name="payment_status"/>
                <field name="payment_date"/>
                <field name="plan_name"/>
                <field name="billedto"/>
                <field name="address"/>
                <field name="gstin"/>
                <field name="institution_name"/>
                <field name="institution_domain"/>
                <field name="sub_domain"/>
            </tree>
        </field>
    </record>

    <record id="view_payment_onboarding_form" model="ir.ui.view">
        <field name="name">payment.onboarding.form</field>
        <field name="model">payment.onboarding</field>
        <field name="arch" type="xml">
            <form string="Onboarding Payment">
                <sheet>
                    <group>
                        <field name="order_id"/>
                        <field name="customer_id"/>
                        <field name="customer_email"/>
                        <field name="customer_phone"/>
                        <field name="amount"/>
                        <field name="payment_status"/>
                        <field name="payment_date"/>
                        <field name="plan_name"/>
                        <field name="billedto"/>
                        <field name="address"/>
                        <field name="gstin"/>
                        <field name="institution_name"/>
                        <field name="institution_domain"/>
                        <field name="sub_domain"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_payment_onboarding">
        <field name="name">Onboarding Payments</field>
        <field name="res_model">payment.onboarding</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_payment_onboarding"
              name="Onboarding Payments"
              parent="website.menu_website_global_configuration"
              action="action_payment_onboarding"
              groups="hdfc_payment_gateway.group_payment_success_admin"
              sequence="21"/>
</odoo>
