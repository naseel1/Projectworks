<odoo>
    <template id="payment_success_template" name="Payment Success">
        <t t-call="website.layout">
            <section class="pt48 pb48">
                <div class="container">
                    <div class="payment_card">
                        <div class="gif-item">
                            <img src="/hdfc_payment_gateway/static/img/payment.gif"/>
                        </div>
                        <div class="details-item">
                            <h3 class="successful">Payment Successfull</h3>
                            <p class="payment_description">"Thank you for your payment. Your
                                subscription
                                has been activated."
                            </p>
                            <div id="ref">
                                <p id="ref-text">Ref Number</p>
                                <p id="ref-text-content">
                                    <t t-esc="order_id"/>
                                </p>
                            </div>
                            <div id="ref">
                                <p id="ref-text">Payment Status</p>
                                <p id="ref-text-content">
                                    <t t-esc="payment_status"/>
                                </p>
                            </div>
                            <div id="ref">
                                <p id="ref-text">Payment Method</p>
                                <p id="ref-text-content">
                                    <t t-esc="payment_method_type"/>
                                </p>
                            </div>
                            <div id="ref">
                                <p id="ref-text">Amount</p>
                                <p id="ref-text-content">â‚¹
                                    <t t-esc="amount"/>
                                </p>
                            </div>
                            <p class="payment_description mt8">
                                Your login credentials have been sent to the registered email address. Please check your
                                inbox (and spam folder, if necessary).
                            </p>
                            <a t-att-href="'/payment/receipt/' + order_id" class="download_invoice login mt32">
                                Download Invoice
